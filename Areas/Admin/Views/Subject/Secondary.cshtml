
@{
    ViewBag.Title = "Tiến độ môn học cấp THCS";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem = 1;
    var lstSubDTO = ViewBag.lstSubDTO as List<LibraryOnline.Models.DTO.SubjectDTO>;
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tiến độ môn học cấp trung học cơ sở</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            @if (TempData["add_success"] != null)
            {
                <div class="alert alert-success" id="AlertBox">
                    @TempData["add_success"]
                </div>
            }
        </div>
        @*<div class="row">
                <div class="col-md-4" style="margin-bottom: 10px">
                    <a href="/Admin/Product/Add" class="btn btn-lg btn-primary">Thêm mới sản phẩm</a>
                </div>
            </div>*@
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Tiến độ môn học cấp trung học cơ sở
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Môn học</th>
                                        <th>Số bài giảng</th>
                                        <th>Số giáo án</th>
                                        <th>Số đề thi &amp; kiểm tra</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in lstSubDTO)
                                    {
                                        <tr>
                                            <td>@dem</td>
                                            <td>@item.Name</td>
                                            <td>
                                                @item.CountLesson &emsp;
                                                @if (item.CountLesson > item.Real_Lesson)
                                                {
                                                    <span class="label label-danger">Còn thiếu @(item.CountLesson - item.Real_Lesson) bài giảng</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-primary">Đã đúng tiến độ</span>
                                                }
                                            </td>
                                            <td>
                                                @item.SumPlan &emsp;
                                                @if (item.SumPlan > item.Real_Plan)
                                                {
                                                    <span class="label label-danger">Còn thiếu @(item.SumPlan - item.Real_Plan) giáo án</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-primary">Đã đúng tiến độ</span>
                                                }
                                            </td>
                                            <td>
                                                @item.CountExam &emsp;
                                                @if (item.CountExam > item.Real_Exam)
                                                {
                                                    <span class="label label-danger">Còn thiếu @(item.CountExam - item.Real_Exam) đề thi</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-primary">Đã đúng tiến độ</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Admin/Subject/SubjectDetail/@item.Subject_ID" class="btn btn-success"><i class="fa fa-info-circle"></i> Xem chi tiết</a>
                                            </td>
                                        </tr>
                                        dem++;
                                    }
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>

        </div>

    </div>
    <!-- /.container-fluid -->
</div>

@section jsAdmin{

    <script type="text/javascript">
    </script>

}









