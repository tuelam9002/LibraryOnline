@section jsAdmin{

    <script type="text/javascript">
       $('.btnDelete').off('click').on('click', function () {
                const notice = PNotify.notice({
                    title: 'Thông báo',
                    text: 'Bạn thật sự muốn xóa?',
                    icon: 'fa fa-question-circle',
                    width: '360px',
                    minHeight: '110px',
                    hide: false,
                    closer: false,
                    sticker: false,
                    destroy: true,
                    stack: new PNotify.Stack({
                        dir1: 'down',
                        modal: true,
                        firstpos1: 25,
                        overlayClose: false
                    }),
                    modules: new Map([
                        ...PNotify.defaultModules,
                        [PNotifyConfirm, {
                            confirm: true
                        }]
                    ])
                });

                notice.on('pnotify:confirm', () =>
                    $.ajax({
                        data: { ID: $(this).data('id') },
                        url: '/Admin/Document/Delete',
                        dataType: 'Json',
                        type: 'POST',
                        success: function (res) {
                            if (res.status == true) {

                                window.location.href = "/Admin/Document/Index";
                                PNotify.success({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa tài liệu thành công.'
                                });
                            } else {

                                window.location.href = "/Admin/Document/Index";
                                PNotify.error({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa tài liệu KHÔNG thành công.'
                                });
                            }
                        }
                    })

                );


            });
    </script>

}





