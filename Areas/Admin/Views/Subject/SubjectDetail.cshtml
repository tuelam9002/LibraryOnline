@using LibraryOnline.Models.EF;
@{
    var sub = ViewBag.Subject as Subject;
    ViewBag.Title = "Môn: " + sub.Name;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var BaiGiang = ViewBag.BaiGiang as List<Document>;
    var GiaoAn = ViewBag.GiaoAn as List<Document>;
    var DeThi = ViewBag.DeThi as List<Document>;
    int dem_1 = 1, dem_2 = 1, dem_3 = 1;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Chi tiết tiến độ môn: @sub.Name</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Bài giảng
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tên tài liệu</th>
                                        <th>Ngày đăng</th>
                                        <th>Tác giả</th>
                                        <th>Thuộc danh mục</th>
                                        <th>Đối tượng</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (BaiGiang != null)
                                    {
                                        foreach (var item in BaiGiang)
                                        {
                                            <tr>
                                                <td>@dem_1</td>
                                                <td>@item.Name</td>
                                                <td>@item.DatePost.Value.ToString("dd-MM-yyyy")</td>
                                                <td>@item.PostBy</td>
                                                <td>@item.Category.Name</td>
                                                <td>@item.Subject.Name</td>
                                                <td>
                                                    @if (item.ExtensionFile.Trim() == ".doc" || item.ExtensionFile.Trim() == ".docx")
                                                    {
                                                        <a href="/Document/GetDoc/@item.ID" class="btn btn-primary" target="_blank" title="Xem chi tiết tài liệu"><i class="fa fa-info-circle"></i></a>
                                                    }
                                                    else if (item.ExtensionFile.Trim() == ".pdf")
                                                    {
                                                        <a href="/Document/GetPDF/@item.ID" class="btn btn-primary" target="_blank" title="Xem chi tiết tài liệu"><i class="fa fa-info-circle"></i></a>
                                                    }
                                                    else if (item.ExtensionFile.Trim() == ".ppt" || item.ExtensionFile.Trim() == ".pptx")
                                                    {
                                                        <a href="/Document/GetPowerPoint/@item.ID" class="btn btn-primary" target="_blank" title="Xem chi tiết tài liệu"><i class="fa fa-info-circle"></i></a>
                                                    }

                                                    <button class="btn btn-danger btnDelete" data-id="@item.ID" title="Xóa tài liệu"><i class="fa fa-remove"></i></button>
                                                </td>
                                            </tr>
                                            dem_1++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7">Chưa có tài liệu</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>

        </div>

